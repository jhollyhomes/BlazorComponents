@if (SelectedDate.Equals(new DateOnly(Year, Month, Day)))
{
    <button @onclick="() => Select(Day)" class="w-10 mx-0.5 px-2 py-1 text-xs font-medium @(ThemeState.ButtonColour) hover:@(ThemeState.ButtonHoverColour) @(ThemeState.ButtonTextColour) rounded border border-gray-200">
        @Day
    </button>
}
else
{
    <button @onclick="() => Select(Day)" class="w-10 mx-0.5 px-2 py-1 text-xs font-medium text-gray-500 rounded border border-white hover:bg-gray-50 hover:border-gray-200">
        @Day
    </button>
}

@code {

    [CascadingParameter]
    protected ThemeState ThemeState { get; set; } = default!;

    [Parameter]
    public int Day { get; set; }

    [Parameter]
    public int Month { get; set; }

    [Parameter]
    public int Year { get; set; }

    [Parameter]
    public DateOnly SelectedDate { get; set; }

    [Parameter]
    public EventCallback<int> SelectDay { get; set; }

    private void Select(int day)
    {
        SelectDay.InvokeAsync(day);
    }
}
