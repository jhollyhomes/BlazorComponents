<div @onclick="() => ClosePopup()" class="@(_visible ? "visible" : "invisible")   fixed z-10 inset-0 transition-opacity"></div>

<div class="relative w-full">

    <button type="button" @onclick="() => TogglePopup()" class="flex items-center w-full border rounded-md p-1 hover:bg-blue-50">
        @if (InitialDate == DateOnly.MinValue)
        {
            <span class="ml-2">Select date</span>
        }
        else
        {
            <span class="ml-2">
                @InitialDate.ToString("dddd, dd MMMM yyyy")
            </span>
        }
    </button>

    @if(_visible)
    {
        <div class="w-72 absolute top-[10.5] z-10 origin-top rounded-md bg-white text-center p-2
                    shadow-lg ring-1 ring-gray-900/5 focus:outline-none" tabindex="-1">

            <div class="flex flex-col justify-between bg-blue-50">

                <div class="flex flex-row justify-evenly my-1">
                    @foreach (string day in _daysOfWeek)
                    {
                        <span class="w-10 bg-white p-2 text-xs font-medium text-gray-500">@day</span>
                    }
                </div>

                @{
                    var _dayInMonth = 1;
                }

                <div class="flex flex-row justify-evenly my-1">
                    @for(int i = 0; i < 7; i++)
                    {
                        if (i >= FirstDayOfMonth)
                        {
                            <button class="w-10 p-2 text-xs font-medium text-gray-500 hover:bg-gray-100">
                                @(_dayInMonth++)
                            </button>
                        }
                        else
                        {
                            <span class="w-10 p-2 text-xs font-medium text-gray-500"></span>
                        }
                    }
                </div>

                @while(_dayInMonth < DaysInMonth)
                {
                    <div class="flex flex-row justify-evenly my-1">
                        @for (int i = 0; i < 7; i++)
                        {
                            if (_dayInMonth < DaysInMonth)
                            {
                                <button class="w-10 p-2 text-xs font-medium text-gray-500 hover:bg-gray-100">
                                    @(_dayInMonth++)
                                </button>
                            }
                            else
                            {
                                <span class="w-10 p-2 text-xs font-medium text-gray-500"></span>
                            }
                        }
                    </div>
                }
            </div>

        </div>
    }

</div>